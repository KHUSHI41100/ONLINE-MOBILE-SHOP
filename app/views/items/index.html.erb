<h1>Available Products</h1>


<table > 
 

 

  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        
       
        

        <td><%= link_to 'Show', item_path(product) %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

